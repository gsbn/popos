{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "powerline",
          "foreground": "#ffffff",
          "background_templates": [
            "{{if .SSHSession}}#D08770{{else}}#3E618C{{end}}"
          ],
          "properties": {
            "prefix": " ",
            "display_host": true,
            "display_user": false
          }
        },
        {
          "type": "session",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#5E81AC",
          "properties": {
            "prefix": " ",
            "display_host": false,
            "display_user": true,
            "ssh_icon": ""
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#81A1C1",
          "properties": {
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#D08770",
          "properties": {
            "display_stash_count": true,
            "display_upstream_icon": true,
            "display_status": true,
            "prefix": " "
          }
        },
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#B48EAD",
          "properties": {
            "prefix": " \uE718 "
          }
        }
      ]
    }
  ]
}
